<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>soapui</groupId>
		<artifactId>xmlbeans</artifactId>
		<version>2.5.1</version>
	</parent>
	
	<groupId>soapui</groupId>
	<artifactId>j2ee-xmlbeans</artifactId>
	<name>soapUI - XML Beans - J2EE</name>
	<version>1.4</version>
	<description>soapUI J2EE XML Beans built as separate library that soapUI application depends upon.
	</description>

	<developers>
		<developer>
			<id>ole.matzura</id>
			<name>Ole Matzura</name>
			<email>ole@eviware.com</email>
			<organization>Eviware Software AB</organization>
			<organizationUrl>http://www.eviware.com</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
		<developer>
			<id>nenad.nikolic</id>
			<name>Nenad V. Nikolic</name>
			<email>nenadn@eviware.com</email>
			<organization>Eviware Software AB</organization>
			<organizationUrl>http://www.eviware.com</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
			<properties>
				<picUrl>
					http://en.gravatar.com/userimage/174741/e25f820e66bcb3fb4de3d61a4463728a.png
				</picUrl>
			</properties>
		</developer>
	</developers>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xmlbeans-maven-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>xmlbeans</goal>
						</goals>
					</execution>
				</executions>
				<inherited>true</inherited>
				<configuration>
					<detail>true</detail>
					<schemaDirectory>../src/xsd/j2ee</schemaDirectory>
					<sourceSchemas>
						<sourceSchema>ejb-jar_2_1.xsd</sourceSchema>
						<sourceSchema>j2ee_1_4.xsd</sourceSchema>
						<sourceSchema>j2ee_jaxrpc_mapping_1_1.xsd
						</sourceSchema>
						<sourceSchema>j2ee_web_services_1_1.xsd
						</sourceSchema>
						<sourceSchema>j2ee_web_services_client_1_1.xsd
						</sourceSchema>
						<sourceSchema>jsp_2_0.xsd</sourceSchema>
						<sourceSchema>web-app_2_4.xsd</sourceSchema>
					</sourceSchemas>
					<outputJar>
						${project.build.directory}/${pom.artifactId}-${pom.version}.jar
					</outputJar>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>