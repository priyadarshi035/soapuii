<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>release</id>
	<includeBaseDirectory>true</includeBaseDirectory>

	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>bin/ext</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/files</directory>
			<fileMode>755</fileMode>
			<outputDirectory/>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/actions</directory>
			<includes>
				<include>*.xml</include>
			</includes>
			<fileMode>755</fileMode>
			<outputDirectory>bin/actions</outputDirectory>
		</fileSet>
		<fileSet>
			<includes>
				<include>AUTHORS</include>
				<include>README</include>
				<include>COPYING</include>
				<include>dependencies.png</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<includes>
				<include>pl.touk:proxy-generator-api</include>
			</includes>
			<outputDirectory>bin/ext</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
